    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/_10sdp</item>


    </style>

    <style name="MyCustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">#00000000</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:tabStripEnabled">false</item>
        <item name="tabMode">scrollable</item>

        <item name="tabIndicatorFullWidth">false</item>


    </style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabBackground">@drawable/tab_background</item>
        <item name="tabIndicatorColor">#00000000</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabSelectedTextColor">@color/activetab_txt_color</item>
        <item name="tabTextColor">@color/inactivetab_txt_color</item>
    </style>
